<h1 class="text-center">All articles</h1>

<div class="row justify-content-center">
  <ul class="col-sm-8">

    <% @articles.each do |a| %>
      <div class="card mt-4 mb-4">

        <div class="card-body">
          <h4 class="card-title"><%= link_to a.title, article_path(a) %></h3>
          <p class="card-text"><%= truncate(a.description, length: 100) %></p>
          <small class="text-muted">
            Created <%= time_ago_in_words(a.created_at) %> ago by <%= a.user.username %>,
            last updated: <%= time_ago_in_words(a.updated_at) %>
          </small>
        </div>

        <div class="card-footer">
          <%= link_to "Edit", edit_article_path(a), class: "btn btn-sm btn-success" %>
          <%= link_to "Delete",
                      article_path(a),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-sm btn-danger" %>
        </div>

      </div>
    <% end %>

  </ul>
</div>

