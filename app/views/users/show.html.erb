<article class="row justify-content-center">

  <header class="col-sm-12">
    <h1 class="text-center">Welcome to <%= @user.username %>'s page</h1>
  </header>

  <section class="mt-3 col-sm-8 text-center">
    <figure>
      <%= gravatar_for @user, size: 150 %>

      <figcaption class="mt-2 font-weight-bold">
        <%= @user.email %>
      </figcaption>
    </figure>
  </section>

  <section class="mt-2 col-sm-8 d-flex justify-content-center">
    <%= link_to "#{@user.username}'s articles",
                "#",
                class: "btn btn-sm btn-primary m-2" %>
    <%= link_to "Edit profile",
                edit_user_path(@user),
                class: "btn btn-sm btn-success m-2" %>
  </section>

</article>
